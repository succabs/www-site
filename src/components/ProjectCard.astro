---
import { Image } from 'astro:assets';

const { name, description, techStack, liveLink, codeLink, image, isDisabled } =
  Astro.props;
---

<div class='max-w-sm rounded overflow-hidden shadow-lg bg-white'>
  <!-- Project Image -->
  <Image src={image} alt={name} class='w-full h-48 object-cover' />

  <!-- Project Info -->
  <div class='px-6 py-4'>
    <div class='font-bold text-xl mb-2'>{name}</div>
    <p class='text-gray-700 text-base mb-2'>{description}</p>

    <!-- Tech Stack -->
    <div class='mb-4'>
      <div class='flex flex-wrap'>
        {
          techStack.map((tech) => (
            <span class='inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2'>
              {tech}
            </span>
          ))
        }
      </div>
    </div>

    <div class='flex space-x-4'>
      {
        liveLink ? (
          <a
            href={liveLink}
            target='_blank'
            class={`px-4 py-2 rounded bg-blue-500 text-white ${isDisabled ? 'opacity-50 cursor-not-allowed' : 'hover:bg-blue-700'}`}
            aria-disabled={isDisabled ? 'true' : undefined}
          >
            Live
          </a>
        ) : (
          <button
            class='px-4 py-2 rounded bg-gray-300 text-gray-600 font-bold opacity-50 cursor-not-allowed'
            disabled
          >
            Live
          </button>
        )
      }

      {
        codeLink ? (
          <a
            href={codeLink}
            target='_blank'
            class={`px-4 py-2 rounded bg-green-500 text-white ${isDisabled ? 'opacity-50 cursor-not-allowed' : 'hover:bg-green-700'}`}
            aria-disabled={isDisabled ? 'true' : undefined}
          >
            Code
          </a>
        ) : (
          <button
            class='px-4 py-2 rounded bg-gray-300 text-gray-600 font-bold opacity-50 cursor-not-allowed'
            disabled
          >
            Code
          </button>
        )
      }
    </div>
  </div>
</div>
