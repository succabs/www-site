---
import Hamburger from './Hamburger.astro';
---

<section class='p-2 md:p-4'>
  <div class='relative flex items-center justify-between'>
    <!-- Name on both mobile and desktop -->
    <div class='text-2xl font-bold pl-2'>Arttu Nikkil√§</div>

    <!-- Hamburger Menu (Only visible on mobile) -->
    <Hamburger id='toggleMenu' class='md:hidden' />

    <!-- Centered Desktop Navigation Menu -->
    <ul
      id='menuListDesktop'
      class='hidden md:flex space-x-8 text-lg absolute left-1/2 transform -translate-x-1/2'
    >
      <li><a href="/" class="hover:text-blue-600">Home</a></li>
      <li><a href="/#about" class="hover:text-blue-600">About</a></li>
      <li><a href="/#portfolio" class="hover:text-blue-600">Portfolio</a></li>
      <li><a href="/blog" class="hover:text-blue-600">Blog</a></li>
    </ul>
  </div>

  <!-- Mobile Navigation Menu (hidden by default) -->
  <ul
    id="menuListMobile"
    class="hidden transition-all duration-300 ease-in-out overflow-hidden flex-col items-center space-y-4 text-lg text-center md:hidden"
    style="height: 0px;"
  >
    <li><a href="/" class="hover:text-blue-600">Home</a></li>
    <li><a href="/#about" class="hover:text-blue-600">About</a></li>
    <li><a href="/#portfolio" class="hover:text-blue-600">Portfolio</a></li>
    <li><a href="/blog" class="hover:text-blue-600">Blog</a></li>
  </ul>
</section>
<div
  class='top-0 left-0 right-0 h-0.5 bg-gradient-to-l from-transparent via-gray-300 to-transparent'
></div>
