---
import { Icon } from 'astro-icon/components'; // Or any other icon library

const skillCategories = [
  {
    category: 'Languages',
    skills: [
    { name: 'HTML5', icon: 'skill-icons:html' },
    { name: 'CSS3', icon: 'skill-icons:css' },
      { name: 'JavaScript', icon: 'skill-icons:javascript' },
      { name: 'TypeScript', icon: 'skill-icons:typescript' },
      { name: 'Liquid', icon: 'vscode-icons:file-type-liquid' },
      { name: 'Python', icon: 'skill-icons:python-light' },
      { name: 'Java', icon: 'skill-icons:java-light' },
    ],
  },
  {
    category: 'Frameworks & Libraries',
    skills: [
      { name: 'React', icon: 'skill-icons:react-light' },
      { name: 'Astro', icon: 'skill-icons:astro' },
      { name: 'jQuery', icon: 'skill-icons:jquery' },
      { name: 'TailwindCSS', icon: 'skill-icons:tailwindcss-light' },
      { name: 'Bootstrap', icon: 'skill-icons:bootstrap' },
      { name: 'Flask', icon: 'skill-icons:flask-light' },
    ],
  },
  {
    category: 'Tools & Other stuff',
    skills: [
    { name: 'Google Analytics', icon: 'logos:google-analytics' },
      { name: 'Git', icon: 'skill-icons:git' },
      { name: 'Docker', icon: 'skill-icons:docker' },
      { name: 'VSCode', icon: 'skill-icons:vscode-light' },
      { name: 'PostgreSQL', icon: 'skill-icons:postgresql-light' },
      { name: 'Node.js', icon: 'skill-icons:nodejs-light' },
      { name: 'Nginx', icon: 'skill-icons:nginx' },
      { name: 'Vite', icon: 'skill-icons:vite-light' },
      { name: 'Figma', icon: 'skill-icons:figma-light' },
      { name: 'Jira', icon: 'logos:jira' },
      { name: 'Teamwork', icon: 'logos:teamwork-icon' },
      { name: 'Teams', icon: 'logos:microsoft-teams' },
      { name: 'Linux', icon: 'skill-icons:linux-light' },
    ],
  },
];
---

<section class='py-12'>
  <div class='container mx-auto px-4'>
    <h2 class='text-3xl font-bold text-center mb-8 text-heading'>Skills</h2>

    <!-- Loop through each category -->
    {
      skillCategories.map((category) => (
        <div class='mb-12'>
          <h3 class='text-2xl font-semibold mb-4 text-heading'>{category.category}</h3>
          <div class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6'>
            {category.skills.map((skill) => (
              <div class='flex flex-col items-center text-center bg-background p-4 rounded-lg border border-body'>
                <Icon name={skill.icon} class='text-4xl mb-2 text-body' />
                <span class='text-sm font-medium text-body'>{skill.name}</span>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
